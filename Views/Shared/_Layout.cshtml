    <div class="container">
            <nav class="navbar">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" style="color:black;font-size:20px;font-weight:bold;">Medical Portal</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a class="navLink" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="navLink" asp-area="" asp-controller="Doctor" asp-action="Index">Doctors</a></li>
                        <li><a class="navLink" asp-area="" asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                        <li><a class="navLink" asp-area="" asp-controller="Patient" asp-action="Index">Patients</a></li>
                        <li><a class="navLink" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    <footer class="text-center">
 
        <div class="container">
          <div class="row">
            <div class="footer-col col-md-4">
            </div>
            <div class="footer-col col-md-4">
              <h3>On the Web</h3>
              <br>

                <span class="list-inline-item">
                  <a class="btn-social btn-outline" href="https://www.facebook.com/pages/Waynesborough-Ophthalmology-PA/103297346402039">
                    <i class="fa fa-fw fa-4x fa-facebook"></i>
                  </a>
                </span>
                <span class="list-inline-item">
                  <a class="btn-social btn-outline" href="https://www.linkedin.com/in/peter-forrest-345b05143/">
