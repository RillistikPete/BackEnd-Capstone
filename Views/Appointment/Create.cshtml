@model BECaptsone.Models.AccountViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Appointment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DoctorId" class="col-md-2 control-label">Doctor</label>
            <div class="col-md-10">
                <select asp-for="DoctorId" class="form-control" asp-items="@ViewBag.DoctorId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PatientId" class="col-md-2 control-label">Patient</label>
            <div class="col-md-10">
                <select asp-for="PatientId" class ="form-control" asp-items="@ViewBag.PatientId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

