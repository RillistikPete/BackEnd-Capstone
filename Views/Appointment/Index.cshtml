@model BECaptsone.Models.AccountViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Appointments</h2>

<p>
    <a asp-action="Create" style="color:darkblue;font-size:18px;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Doctor
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var app in Model.Appointments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => app.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => app.Doctor.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => app.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => app.Patient.LastName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@app.AppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@app.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
