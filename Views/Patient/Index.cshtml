@model IEnumerable<BECaptsone.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h2>Current Patients</h2>

<p>
    <a asp-action="Create" style="color:darkblue;font-size:18px;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    State of Illness
                    <!-- @Html.DisplayNameFor(model => model.StateOfIllness) -->
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateOfIllness)
            </td>
        </tr>
}
    </tbody>
</table>
